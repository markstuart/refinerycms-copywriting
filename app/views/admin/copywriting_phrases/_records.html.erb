<div class='pagination_container'>
  <% if @phrases.any? %>
    <%= render :partial => 'copywriting_phrases', :copywriting_phrases => @phrases %>
  <% else %>
    <p>
      <% unless searching? %>
        <strong>
          <%= t('.no_items_yet') %>
        </strong>
      <% else %>
        <%= t('no_results', :scope => 'shared.admin.search') %>
      <% end %>
    </p>
  <% end %>
</div>